<a href="<%= root_path() %>" class="logo">
    <%= image_tag("isotipo.svg", :alt => "Parking", :height => "35") %>
</a>

<div class="nav_menu" id="menu_principal">
    <div class="nav nav_left search-bar">
        <%= icon('search')%>   <input id="autocomplete" class="search-box" type="text" placeholder="Buscar un lugar"/>
        <!--<span style="display:inline-block; line-height: 60px; font-size: 18px; font-weight:400;">Estacionamientos cercanos</span>-->
    </div>

    <ul class="nav nav_right">
        <li><%= link_to 'Ofrece un lugar', "#", { :class => 'btn btn-default' } %></li>
        <% if ! isLogged() %>
            <li><%= link_to 'Inicia sesión', "#", { :class => 'popup-open', :data => { :popup => 'login' } } %></li>
            <li><%= link_to 'Regístrate', "#", { :class => 'popup-open', :data => { :popup => 'register' } } %></li>
        <% else %>
            <li>
                <a href="#" class="user-icon-menu">
                    <%= icon('user') %>
                    <%= @current_user.name.split(/ /).first %>
                    <%= icon('chevron-up') %>
                    <%= icon('chevron-down') %>
                </a>
                <ul class="sub-menu">
                    <li><%= link_to 'Mi perfil', "#" %></li>
                    <li><%= link_to 'Cerrar sesión', auth_logout_path() %></li>
                </ul>
            </li>
        <% end %>
    </ul>
</div>
