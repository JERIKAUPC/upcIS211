<div class="popup popup-lost-password">
    <div class="popup-content">
        <div class="popup-main">
            <a href="#" class="close">
                <%= icon('close') %>
            </a>

            <h2 class="popup-title">Recuperar contraseña</h2>

            <form class="form-lost-password" action="<%= auth_lost_password_path() %>" method="post">
                <div class="form-group input-icon">
                    <input type="email" name="email" placeholder="Correo electrónico" autocomplete="off" value="" class="form-control">
                    <%= icon('envelope') %>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-send">Recuperar</button>
                    <div class="success_ajax"></div>
                    <div class="error_ajax"></div>
                </div>
                <div class="form-group more-options">
                    <span>
                        ¿Ya tienes una cuenta?
                        <a href="#" class="popup-open" data-popup="login">
                            Inicia sesión
                        </a>
                    </span>
                </div>
            </form>
        </div>
    </div>
</div>
