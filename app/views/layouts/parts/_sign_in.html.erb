<div class="popup popup-login">
    <div class="popup-content">
        <div class="popup-main">
            <a href="#" class="close">
                <%= icon('close') %>
            </a>

            <h2 class="popup-title">Inicia sesión</h2>

            <%= form_tag( auth_login_path(), {:method => "post", :class => "form-sign-in"} ) do %>
                
                <div class="form-group input-icon">
                    <input type="email" name="email" placeholder="Correo electrónico" autocomplete="off" value="" class="form-control">
                    <%= icon('envelope') %>
                </div>
                <div class="form-group input-icon">
                    <input type="password" name="password" placeholder="Contraseña" value="" class="form-control">
                    <%= icon('lock') %>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-send">
                        <span class="normal">Ingresar</span>
                        <span class="sending"><%= icon('refresh fa-spin')%> Ingresando...</span>
                    </button>
                    <div class="error_ajax"></div>
                </div>
                <div class="form-group more-options">
                    <span>
                        <a href="#" class="popup-open" data-popup="lost-password">
                            ¿Olvidaste tu contraseña?
                        </a>
                    </span>
                </div>
                <div class="form-group more-options">
                    <span>
                        ¿No tienes una cuenta?
                        <a href="#" class="popup-open" data-popup="register">
                            Regístrate
                        </a>
                    </span>
                </div>
            <% end%>
        </div>
    </div>
</div>
