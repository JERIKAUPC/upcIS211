<%= link_to 'Logo', root_path,{ :class => 'logo'} %>

<div class="nav_menu" id="menu_principal">
    <ul class="nav nav_left">
        <li><%= link_to '¿Buscas un lugar?', "#" %></li>
        <li><%= link_to '¿Tienes espacio disponible?', "#" %></li>
    </ul>

    <ul class="nav nav_right">
        <li><%= link_to 'Ofrece un lugar', "#", { :class => 'btn btn-default' } %></li>
        <% if ! isLogged() %>
            <li><%= link_to 'Inicia sesión', "#", { :class => 'popup-open', :data => { :popup => 'login' } } %></li>
            <li><%= link_to 'Regístrate', "#", { :class => 'popup-open', :data => { :popup => 'register' } } %></li>
        <% else %>
            <li>
                <a href="#" class="user-icon-menu">
                    <%= icon('user') %>
                    <%= @current_user.name.split(/ /).first %>
                    <%= icon('chevron-up') %>
                    <%= icon('chevron-down') %>
                </a>
                <ul class="sub-menu">
                    <li><%= link_to 'Mi perfil', "#" %></li>
                    <li><%= link_to 'Cerrar sesión', auth_logout_path() %></li>
                </ul>
            </li>
        <% end %>
    </ul>
</div>
