<div class="popup popup-register">
    <div class="popup-content">
        <div class="popup-main">
            <a href="#" class="close">
                <%= icon('close') %>
            </a>

            <h2 class="popup-title">Regístrate</h2>

            <%= form_for :api_v1_users do |f| %>

            <% end %>
            <form class="form-sign-up" action="<%= api_v1_users_path() %>" method="post">
                <div class="form-group input-icon">
                    <input type="text" name="name" placeholder="Nombre completo" autocomplete="off" value="" class="form-control">
                    <%= icon('user') %>
                </div>
                <div class="form-group input-icon">
                    <input type="email" name="email" placeholder="Correo electrónico" autocomplete="off" value="" class="form-control">
                    <%= icon('envelope') %>
                </div>
                <div class="form-group input-icon">
                    <input type="password" name="password" placeholder="Contraseña" value="" class="form-control">
                    <%= icon('lock') %>
                </div>
                <div class="form-group input-icon">
                    <input type="text" name="phone" placeholder="Número de teléfono" autocomplete="off" value="" class="form-control">
                    <%= icon('phone') %>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-send">Regístrate</button>
                </div>
            </form>
        </div>
    </div>
</div>
